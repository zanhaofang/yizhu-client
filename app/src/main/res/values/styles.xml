<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="AppStartLoadTranslucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/back_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/back_exit</item>
    </style>

    <style name="AskQuestionListItemPadding">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="my_info_holder_style">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/bg_edittext_normal</item>
    </style>

    <style name="my_info_title_style">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="my_info_content_style">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="my_info_image_style">
        <item name="android:padding">5dp</item>
    </style>

</resources>
